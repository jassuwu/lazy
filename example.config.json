{
  "src": {
    "dir": "~/path/to/contracts",
    "fileName": "contract-addresses.json",
    "cmd": "npx hardhat run scripts/deploy.ts --network testnet"
  },
  "dest": {
    "paths": [
      "~/projects/frontend-app/.env",
      "~/projects/admin-panel/.env",
      "~/projects/mobile-app/.env"
    ],
    "envMapping": {
      "contractName1": "VITE_CONTRACT_ADDRESS",
      "contractName2": "NEXT_PUBLIC_CONTRACT_ADDRESS",
      "contractName3": "REACT_APP_CONTRACT_ADDRESS",
      "contractName4": "PUBLIC_CONTRACT_ADDRESS",
      "contractName5": "ENV_CONTRACT_ADDRESS"
    }
  }
}
